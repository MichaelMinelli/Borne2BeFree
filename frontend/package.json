{
    "name"           : "borne2befree-frontend",
    "description"    : "Alma Self-Checkout tool that doesn't use CORS",
    "version"        : "2.0.0",
    "private"        : true,
    "repository"     : {
        "type": "git",
        "url" : "git+https://github.com/MichaelMinelli/Borne2BeFree.git"
    },
    "keywords"       : [
        "alma"
    ],
    "bugs"           : {
        "url": "https://github.com/MichaelMinelli/Borne2BeFree/issues"
    },
    "type"           : "module",
    "scripts"        : {
        "dev"    : "vite",
        "build"  : "tsc -b && vite build",
        "lint"   : "eslint .",
        "preview": "vite preview"
    },
    "eslintConfig"   : {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist"   : {
        "production" : [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies"   : {
        "@tailwindcss/vite": "^4.1.7",
        "react"            : "^19.1.0",
        "react-dom"        : "^19.1.0",
        "tailwindcss"      : "^4.1.7"
    },
    "devDependencies": {
        "@eslint/js"                 : "^9.27.0",
        "@types/react"               : "^19.1.4",
        "@types/react-dom"           : "^19.1.5",
        "@vitejs/plugin-react"       : "^4.4.1",
        "eslint"                     : "^9.27.0",
        "eslint-plugin-react-hooks"  : "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "eslint-plugin-react"        : "^7.37.5",
        "globals"                    : "^16.1.0",
        "typescript"                 : "~5.8.3",
        "typescript-eslint"          : "^8.30.1",
        "vite"                       : "^6.3.5"
    }
}
